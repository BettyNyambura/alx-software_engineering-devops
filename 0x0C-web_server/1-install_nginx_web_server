#!/usr/bin/env bash
# This script installs Nginx and configures it to serve a page containing 'Hello World!'

# Update and install nginx
apt-get update -y
apt-get install -y nginx

# Remove the default configuration if it exists
rm -f /etc/nginx/sites-enabled/default

# Create a custom configuration file for Nginx
echo 'server {
    listen 80;
    root /var/www/html;
    index index.html;
    
    location / {
        try_files $uri $uri/ =404;
    }
}' > /etc/nginx/sites-available/default

# Create the index.html file with the 'Hello World!' message
echo 'Hello World!' > /var/www/html/index.html

# Restart nginx without using systemctl (using service)
service nginx restart
