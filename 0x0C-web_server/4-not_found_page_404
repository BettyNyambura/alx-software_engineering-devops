#!/usr/bin/env bash
# This script configures an Nginx server to redirect "/redirect_me" to another page with a 301 status.

# Ensure the script is run as root
if [[ $EUID -ne 0 ]]; then
  echo "This script must be run as root" >&2
  exit 1
fi

# Update package list and install Nginx
apt-get update -y
apt-get install nginx -y

# Create custom 404 page with required message
echo "Ceci n'est pas une page" > /var/www/html/404.html

# Nginx configuration to ensure it listens on port 80
sed -i 's/^.*listen 80 default_server;/listen 80;/' /etc/nginx/sites-available/default
sed -i 's/^.*server_name _;/server_name localhost;/' /etc/nginx/sites-available/default

# Configure Nginx to use the custom 404 page
sed -i '/server {/a \ \ \ \ error_page 404 /404.html;' /etc/nginx/sites-available/default
sed -i '/server {/a \ \ \ \ location = /404.html { \n\ \ \ \ \ \ \ \ root /var/www/html; \n\ \ \ \ \ }' /etc/nginx/sites-available/default

# Stop any running Nginx process
nginx -s stop || true

# Start Nginx
nginx

# Verify if Nginx is running and serving on port 80
if ss -tuln | grep -q ':80'; then
  echo "Nginx is running and serving on port 80."
else
  echo "Failed to start Nginx." >&2
  exit 1
fi
